<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:sys="using:System"
		xmlns:my="using:UnderstandingTemplatedControls.Controls">
    <Design.PreviewWith>
        <Border Padding="20">
			<my:MyControl Width="200" FileName="myFileName" >
				<DataValidationErrors.Error>
					<sys:Exception />
				</DataValidationErrors.Error>
			</my:MyControl>
        </Border>
    </Design.PreviewWith>

	<Style Selector="my|MyControl">
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate>
					<Grid>
						<DataValidationErrors>
							<DockPanel>
								<Button DockPanel.Dock="Right" Content="..." />
								<TextBox Text="{TemplateBinding FileName, Mode=TwoWay}" />
							</DockPanel>
						</DataValidationErrors>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</Styles>
